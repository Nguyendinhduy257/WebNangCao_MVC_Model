<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cổng Giảng Viên</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        /* CSS nội bộ nhỏ để chỉnh Sidebar */
        #wrapper {
            display: flex;
            width: 100%;
        }

        #sidebar-wrapper {
            min-height: 100vh;
            width: 250px;
            margin-left: 0;
            transition: margin 0.25s ease-out;
        }

        #page-content-wrapper {
            width: 100%;
        }

        .list-group-item-action {
            background-color: #f8f9fa;
            border: none;
            padding: 15px 20px;
        }

            .list-group-item-action:hover {
                background-color: #e9ecef;
                color: #0d6efd;
            }

        .sidebar-heading {
            padding: 1.5rem;
            font-size: 1.2rem;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="d-flex" id="wrapper">
        <div class="bg-white border-end" id="sidebar-wrapper">
            <div class="sidebar-heading text-primary border-bottom">
                <i class="fas fa-chalkboard-teacher me-2"></i>EduTest Teacher
            </div>
            <div class="list-group list-group-flush">
                <a href="/GiangVien/Dashboard" class="list-group-item list-group-item-action list-group-item-light p-3">
                    <i class="fas fa-tachometer-alt me-2"></i> Tổng quan
                </a>
                <a href="/GiangVien/ClassRoom" class="list-group-item list-group-item-action list-group-item-light p-3">
                    <i class="fas fa-users me-2"></i> Quản lý Lớp học
                </a>
                <a href="/GiangVien/ExamManage" class="list-group-item list-group-item-action list-group-item-light p-3">
                    <i class="fas fa-file-alt me-2"></i> Ngân hàng Đề thi
                </a>
                <a href="/GiangVien/Grading" class="list-group-item list-group-item-action list-group-item-light p-3">
                    <i class="fas fa-marker me-2"></i> Chấm thi
                </a>
                <a href="/" class="list-group-item list-group-item-action list-group-item-light p-3 text-danger">
                    <i class="fas fa-sign-out-alt me-2"></i> Thoát về Trang chủ
                </a>
            </div>
        </div>

        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-primary btn-sm" id="sidebarToggle">Menu</button>
                    <span class="ms-auto fw-bold text-secondary">Xin chào, Giảng viên</span>
                </div>
            </nav>

            <div class="container-fluid p-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Script nhỏ để ẩn hiện menu
        document.getElementById("sidebarToggle").onclick = function() {
            var el = document.getElementById("wrapper");
            var toggleButton = document.getElementById("menu-toggle");
            // Logic ẩn hiện đơn giản (có thể thêm class toggle sau)
            alert("Đã nhận click! Bạn có thể thêm class 'toggled' vào CSS để ẩn hiện sidebar.");
        };
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>