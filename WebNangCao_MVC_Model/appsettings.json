{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    // Chuỗi kết nối chuẩn cho PostgreSQL
    // Host: thường là localhost (nếu chạy trên máy)
    // Port: mặc định là 5432
    // Database: Tên DB bạn muốn tạo (ví dụ: EduTestDB)
    // Username: mặc định thường là 'postgres'
    // Password: mật khẩu bạn đặt cho user "postgres"
    "DefaultConnection": "Host=localhost;Port=5432;Database=EduTestDB;Username=postgres;Password=1234;SSL Mode=Disable;Include Error Detail=true"
  }
}
